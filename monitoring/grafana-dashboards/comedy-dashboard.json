{
  "dashboard": {
    "id": null,
    "title": "Comedy Discovery Metrics",
    "description": "Performance metrics for the Comedy Discovery recommendation system",
    "tags": ["comedy", "ml", "recommendations"],
    "timezone": "browser",
    "editable": true,
    "schemaVersion": 27,
    "version": 0,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"comedy-backend\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "xAxis": {
          "show": true
        },
        "legend": {
          "show": true,
          "values": false,
          "current": false,
          "max": false,
          "min": false,
          "total": false,
          "avg": false
        }
      },
      {
        "id": 2,
        "title": "Response Times",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"comedy-backend\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"comedy-backend\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 3,
        "title": "User Interactions by Type",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(user_interactions_total[5m])",
            "legendFormat": "{{interaction_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Interactions/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 4,
        "title": "Recommendation Accuracy",
        "type": "singlestat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "avg(recommendation_accuracy)",
            "legendFormat": "Accuracy",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "percentunit",
        "decimals": 2,
        "thresholds": "0.6,0.8",
        "colorBackground": true,
        "colors": [
          "#d44a3a",
          "#e24d42",
          "#299c46"
        ],
        "sparkline": {
          "show": false
        },
        "gauge": {
          "show": false
        }
      },
      {
        "id": 5,
        "title": "Active Users per Hour",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "count(increase(user_interactions_total[1h]) > 0)",
            "legendFormat": "Active users/hour",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Users",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "title": "ML Model Performance",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "precision_at_k{k=\"5\"}",
            "legendFormat": "Precision@5",
            "refId": "A"
          },
          {
            "expr": "recall_at_k{k=\"10\"}",
            "legendFormat": "Recall@10",
            "refId": "B"
          },
          {
            "expr": "ndcg_score",
            "legendFormat": "NDCG",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Score",
            "min": 0,
            "max": 1
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "Redis Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "redis_memory_used_bytes{job=\"redis\"}",
            "legendFormat": "Used Memory",
            "refId": "A"
          },
          {
            "expr": "redis_memory_max_bytes{job=\"redis\"}",
            "legendFormat": "Max Memory",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      }
    ]
  }
}